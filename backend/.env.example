PORT=8080
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:5432/echo
JWT_SECRET=replace-with-a-long-random-secret
CORS_ORIGIN=*

# Apple Sign In (required for /v1/auth/apple verification)
APPLE_AUDIENCE=com.xianggui.echo.app,com.xianggui.echo.mac
APPLE_ISSUER=https://appleid.apple.com

# Google Sign-In (required for /v1/auth/google verification)
# Comma-separated OAuth client IDs used by iOS + macOS apps
GOOGLE_AUDIENCE=
GOOGLE_ISSUER=https://accounts.google.com

# Stripe (optional, for subscriptions)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_DEFAULT_PRICE_ID=
STRIPE_SUCCESS_URL=
STRIPE_CANCEL_URL=

# Optional object storage (S3 / Cloudflare R2)
S3_ENDPOINT=
S3_REGION=auto
S3_BUCKET=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_PUBLIC_BASE_URL=
